<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabriel.studytogether2.EditEvent">


    <GridLayout
        android:id="@+id/gl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:id="@+id/tv_name_label"
            android:text="Name:"
            android:layout_column="0"
            android:layout_row="0" />

        <EditText
            android:id="@+id/et_name"
            android:layout_column="1"
            android:layout_row="0"/>

        <TextView
            android:id="@+id/tv_start_time"
            android:text="Start time:"
            android:layout_column="0"
            android:layout_row="1" />

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_row="1">

            <EditText
                android:id="@+id/et_start_hour"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                />

            <EditText
                android:id="@+id/et_start_minute"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Spinner
                android:id="@+id/spinner_start_ampm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_end_time"
            android:text="End time:"
            android:layout_column="0"
            android:layout_row="2" />

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_row="2">

            <EditText
                android:id="@+id/et_end_hour"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                />

            <EditText
                android:id="@+id/et_end_minute"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Spinner
                android:id="@+id/spinner_end_ampm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>


    </GridLayout>

    <CheckBox
        android:id="@+id/cb_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="1">

        <CheckBox
            android:id="@+id/cb_sun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:text="S"
            />

        <CheckBox
            android:id="@+id/cb_mon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:text="M"
            />

        <CheckBox
            android:id="@+id/cb_tue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2"
            android:text="T"
            />

        <CheckBox
            android:id="@+id/cb_wed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="3"
            android:text="W"
            />

        <CheckBox
            android:id="@+id/cb_thu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="4"
            android:text="T"
            />

        <CheckBox
            android:id="@+id/cb_fri"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="5"
            android:text="F"
            />

        <CheckBox
            android:id="@+id/cb_sat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="6"
            android:text="S"
            />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Date"
        android:onClick="showDatePickerDialog" />

    <EditText
        android:id="@+id/et_notes"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Add note"
        tools:layout_editor_absoluteY="506dp"
        tools:layout_editor_absoluteX="0dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/radio_busy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm busy"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm free"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>
</LinearLayout>
